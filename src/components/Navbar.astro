---
import logo from "../images/logo.png";
import { Image } from "astro:assets";
---

<nav
  class="flex justify-between items-center mx-auto w-full md:w-[80%] mt-7 px-4 pb-14"
>
  <div class="flex items-center space-x-2">
    <Image alt="logo" src={logo} class="size-16" />
    <h2>Harbour Light</h2>
  </div>
  <div class="flex space-x-4 md:space-x-8">
    <a
      class={Astro.url.pathname === "/" ? "font-bold text-powder-blue" : ""}
      href="/">Home</a
    >
    <a
      class={Astro.url.pathname === "/services"
        ? "font-bold text-powder-blue "
        : ""}
      href="/services">Service</a
    >
    <a
      class={Astro.url.pathname === "/referrals"
        ? "font-bold text-powder-blue "
        : ""}
      href="/referrals">Referrals</a
    >
    <a
      class={Astro.url.pathname === "/careers"
        ? "font-bold text-powder-blue "
        : ""}
      href="/careers">Careers</a
    >
  </div>
  <div class="hidden md:flex space-x-2">
    <p>(555) 555-1234</p>
    <span>|</span>
    <a href="#contact">Get in touch</a>
  </div>
</nav>

<!-- Smooth scroll to contact us section-->
<script>
  const link = document.querySelector('a[href="#contact"]');
  link?.addEventListener("click", (e) => {
    e.preventDefault();
    const targetId = link.getAttribute("href");
    const targetSection = document.getElementById(`${targetId!.split("#")[1]}`);
    targetSection!.scrollIntoView({ behavior: "smooth" });
  });
</script>
